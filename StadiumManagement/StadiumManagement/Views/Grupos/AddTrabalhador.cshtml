@model StadiumManagement.Models.GruposDetalhes
@{
    ViewBag.Title = "Adicionar Trabalhador";
}

<h2>Adicionar Trabalhador</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">

    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.GrupoId)


    <div class="form-group">
        @Html.LabelForModel("Trabalhador", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownList("UserId", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.UserId, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Add" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Voltar", "Details", new { id = Model.GrupoId}, new { @class = "btn btn-primary" }) |
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}


